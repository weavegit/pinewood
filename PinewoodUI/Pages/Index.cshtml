@page

@model PinewoodUI.Pages.IndexModel

<h2>Customers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Town</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Customers != null)
        {
            @foreach (var item in Model.Customers)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Town</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a asp-page="Create" class="btn btn-primary">Add New Customer</a>