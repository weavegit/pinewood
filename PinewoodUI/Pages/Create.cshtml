@page
@model PinewoodUI.Pages.CreateModel

<h2>Create New Customer</h2>

<form method="post">
    <div style="width:33%;">
        <div class="form-group">
            <label asp-for="Customer.Name"></label>
            <input asp-for="Customer.Name" class="form-control" maxlength="100"/>
            <span asp-validation-for="Customer.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Customer.PhoneNumber"></label>
            <input asp-for="Customer.PhoneNumber" class="form-control" onkeypress="return isNumberKey(event)" maxlength="12" />
            <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Customer.Town"></label>
            <input asp-for="Customer.Town" class="form-control" maxlength="100" />
            <span asp-validation-for="Customer.Town" class="text-danger"></span>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>


