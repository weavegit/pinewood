@page
@model PinewoodUI.Pages.EditModel
@{
}


<h2>Edit Customer</h2>

<form method="post">
    @Html.HiddenFor(m => m.Customer.Id, new { @id = "Id" })
    <div style="width:33%;">
        <div class="form-group">
            <label asp-for="Customer.Name"></label>
            <input asp-for="Customer.Name" class="form-control" />
            <span asp-validation-for="Customer.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Customer.PhoneNumber"></label>
            <input asp-for="Customer.PhoneNumber" class="form-control" />
            <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Customer.Town"></label>
            <input asp-for="Customer.Town" class="form-control" />
            <span asp-validation-for="Customer.Town" class="text-danger"></span>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>


